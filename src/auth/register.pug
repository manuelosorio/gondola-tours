  body#login
    main
      section
        .card__login
          .card--left
            form(name="form").login
              .l-row
                .l-column--6
                  label First Name
                  input(type="text" name="first-name").input--border
                .l-column--6
                  label Last Name
                  input(type="text" name="last-name").input--border
              .l-row
                .l-column--12
                  label Email
                  input(type="email" name="email" data-validation="email").input--border
              .l-row
                .l-column--6
                  label Password
                  input(type="password" name="new-password").input--border
                .l-column--6
                  label Confirm Password
                  input(type="password" name="confirmPassword").input--border
              .l-row
                input
              a(href="") Forgot Password
              input(type="submit" name="submit" value="Register").btn.btn--square__login.form--submit
          .card--right
            a(href="").btn.btn--square
              i.icon-google
              | Login With Google
            a(href="").btn.btn--square
              i.icon-facebook
              | Login With Facebook
            a(href="login.html").btn.btn--underline.btn--underline__white Already a guest?
        a(href="index.html").btn.btn--underline.btn--underline__white.btn--forced Return Home
    include ../includes/scripts


